 {{#if messages.success}}
                <div class="auto-close alert alert-success">
                    <Span>{{messages.success}}</Span>
                </div>
            {{/if}}
    

     <main>  
        <div class="container">

            <div class="sidebar">
                <div class="top">
                  <div class="profile-img">
                     <img src="/static/profilePictures/{{pic}}" alt="ProfilePic" />
                  </div>
                    <h1>{{id.applicant_name}}</h1>
                </div>
        
                <div class="item">
                    <ul>
                        <li><a href="/applicant/jobs">Dashboard</a></li>
                        <li><a href="/applicant/profile">Profile</a></li>
                        <li><a href="/applicant/trackStatus">Track Status</a></li>
                    </ul>
                    <form action="/applicantlogout?_method=DELETE" method="post">
                    <button>Logout</button>
                    </form>
                </div>
        
            </div>

        <div class="job-container">
            {{#each data}}
            <a href="/applicant/jobs/{{job_id}}" class="job-link"> 
                <div class="job">
                    <div class="img-container">
                        <img src="/static/companyLogos/{{company_logo}}" alt="ss">
                    </div>
                    <div class="job-info">
                       <h1>{{job_title}}</h1>
                        <h2>{{company_name}}</h2>
                        <h3>{{job_location}}</h3>
                        <p>Date Posted <span> {{dateposted}}</span> </p>
                    </div>
                </div> </a>
            {{/each}}
            </div>   
            {{#if des}}
            <div class="job-description">

                    <div class="job-header-container">
                        <h1>{{des.job_title}}</h1>
                        <h2>{{des.company_name}}</h2>
                    </div>

                        <div class="job-info-container">
                            <span> <i class="fa-solid fa-briefcase"></i> On-site {{des.job_type}}</span>
                            <span> <i class="fa-solid fa-list-check"></i> Skills: {{des.skillsreq}}</span>
                            <span> <i class="fa-solid fa-indian-rupee-sign"></i> Salary: {{des.salary}}</span>
                            <span> <i class="fa-solid fa-location-dot"></i> {{des.job_location}} </span>

                            {{#if isApplied}} <a href="/applicant/trackStatus">Track Your Application</a> 
                                {{else}}
                                      <div class="modal fade" id="acceptModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                Are you Sure you want to apply?
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-success" onclick="window.location.href='/applicant/apply/{{id.applicant_id}}/{{des.job_id}}'">Apply</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                              </div>
                            </div>
                          </div>
                                      </div>
                                 <button type="button" data-bs-toggle="modal" data-bs-target="#acceptModal" id="button">Apply</button> <!--BUTTON TO APPLY FOR JOBS-->
                            {{/if}}
                        </div>

                    <div class="additional-info">

                        <h1>About the job</h1>

                            <h2>Job Description</h2>
                            <p>{{des.job_description}}</p> <br>

                        <h2>Required Knowledge</h2>

                            <li>{{des.knowledge}}</li>
                            <br>

                        <h2>Education + Experience</h2>
                        <li>{{des.education}}</li>
                    </div>
            </div>
            {{/if}}
        </div>


    </main>
